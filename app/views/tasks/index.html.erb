
<h1>タスク一覧</h1>
<div class="container">
  <table>
    <h2>タスク名</h2>
    <tbody>
    <!-- 以下のコードでControllerから受け取ったタスク一覧を表示 -->
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= link_to '編集', edit_task_path(task) %></td>
          <td><%= link_to '削除', task_path(task), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= link_to '追加', new_task_path , class: "btn btn-lg btn-primary"%>
</div>